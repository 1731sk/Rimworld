<?xml version="1.0" encoding="utf-8" ?>
<ThoughtDefs>

  <ThoughtDef>
    <defName>SmallAdrenalineBoostThought</defName>
    <durationDays>1</durationDays>
    <stackLimit>1</stackLimit>
    <stages>
      <li>
        <label>Small adrenaline boost</label>
        <description>I heard the alarm. Let's see what happens.</description>
        <baseMoodEffect>5</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>MediumAdrenalineBoostThought</defName>
    <durationDays>1</durationDays>
    <stackLimit>1</stackLimit>
    <stages>
      <li>
        <label>Medium adrenaline boost</label>
        <description>The colony is under attack! Let's fight for our lives!</description>
        <baseMoodEffect>10</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>ThreatIsFinishedThought</defName>
    <durationDays>0.5</durationDays>
    <stackLimit>1</stackLimit>
    <stages>
      <li>
        <label>Threat is finished</label>
        <description>The colony is no more threatened. I feel relieved. </description>
        <baseMoodEffect>5</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>ColonyIsThreatenedThought</defName>
    <durationDays>0.5</durationDays>
    <stackLimit>1</stackLimit>
    <stages>
      <li>
        <label>Colony is threatened</label>
        <description>The colony is threatened. Can't I just live in peace?!</description>
        <baseMoodEffect>-3</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>ColonyIsUnderPressureThought</defName>
    <durationDays>0.3</durationDays>
    <stackLimit>1</stackLimit>
    <stages>
      <li>
        <label>Colony is under pressure</label>
        <description>The colony is under pressure for too long! I'm so tired and I cannot bear this anymore.</description>
        <baseMoodEffect>-2</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

</ThoughtDefs>