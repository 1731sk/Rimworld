<?xml version="1.0" encoding="utf-8" ?>
<RecipeDefs>

  <RecipeDef>
    <defName>MakeTargetingModule</defName>
    <label>Make targeting module</label>
    <description>   Make a targeting module. This advanced piece of electronics is used by laser weapons to efficiently acquire their target.</description>
    <jobString>Making targeting module.</jobString>
    <workAmount>800</workAmount>
    <workSpeedStat>LaserWeaponsCraftingSpeed</workSpeedStat>
    <skillRequirements>
      <li>
        <skill>Crafting</skill>
        <minLevel>5</minLevel>
      </li>
    </skillRequirements>
    <effectWorking>Repair</effectWorking>
    <soundWorking>Interact_Repair</soundWorking>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Plasteel</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>IntegratedCircuitsBoard</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Plasteel</li>
        <li>IntegratedCircuitsBoard</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <TargetingModule>1</TargetingModule>
    </products>
    <workSkill>Crafting</workSkill>
  </RecipeDef>

  <RecipeDef>
    <defName>MakeWeaponParts</defName>
    <label>Make weapon parts</label>
    <description>   Make several reinforced weapon parts from metal and plasteel: butt, cannon, handles...</description>
    <jobString>Making weapon parts.</jobString>
    <workAmount>1000</workAmount>
    <workSpeedStat>LaserWeaponsCraftingSpeed</workSpeedStat>
    <skillRequirements>
      <li>
        <skill>Crafting</skill>
        <minLevel>5</minLevel>
      </li>
    </skillRequirements>
    <effectWorking>Repair</effectWorking>
    <soundWorking>Interact_Repair</soundWorking>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Plasteel</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Plasteel</li>
        <li>Steel</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <WeaponParts>2</WeaponParts>
    </products>
    <workSkill>Crafting</workSkill>
  </RecipeDef>

  <RecipeDef>
    <defName>ExtractCrysteel</defName>
    <label>Extract crysteel</label>
    <description>   Try to extract a crysteel from some plasteel. This process is very risky as the crysteel is very hard to extract without breaking it.</description>
    <jobString>Extracting crysteel.</jobString>
    <workAmount>600</workAmount>
    <workSpeedStat>LaserWeaponsCraftingSpeed</workSpeedStat>
    <skillRequirements>
      <li>
        <skill>Crafting</skill>
        <minLevel>10</minLevel>
      </li>
    </skillRequirements>
    <effectWorking>Repair</effectWorking>
    <soundWorking>Interact_Repair</soundWorking>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Plasteel</li>
          </thingDefs>
        </filter>
        <count>3</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Plasteel</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <CrysteelSpawner>1</CrysteelSpawner>
    </products>
    <workSkill>Crafting</workSkill>
  </RecipeDef>

