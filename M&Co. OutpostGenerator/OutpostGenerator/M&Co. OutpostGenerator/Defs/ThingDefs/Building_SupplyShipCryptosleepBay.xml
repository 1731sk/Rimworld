<?xml version="1.0" encoding="utf-8" ?>
<Buildings>

  <ThingDef Name="BuildingBase" Abstract="True">
    <category>Building</category>
    <thingClass>Building</thingClass>
    <soundImpactDefault>BulletImpactMetal</soundImpactDefault>
    <selectable>true</selectable>
    <drawerType>MapMeshAndRealTime</drawerType>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <repairEffect>Repair</repairEffect>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
    <filthLeaving>BuildingRubble</filthLeaving>
  </ThingDef>

  <ThingDef Name="FurnitureBase" ParentName="BuildingBase" Abstract="True">
    <comps>
      <li>
        <compClass>CompQuality</compClass>
      </li>
    </comps>
    <DesignationCategory>Furniture</DesignationCategory>
    <minifiedDef>MinifiedFurniture</minifiedDef>
  </ThingDef>

  <ThingDef ParentName="BuildingBase">
    <defName>SupplyShipCryptosleepBay</defName>
    <label>supply ship cryptosleep bay</label>
    <description>Supply ship cryptosleep bay. It contains the personnel during transit from or to the orbital ship.</description>
    <thingClass>OutpostGenerator.Building_SupplyShipCryptosleepBay</thingClass>
    <category>Attachment</category> <!-- Trick so the supply ship does not wipes existing structures when landed. -->
    <graphicData>
      <texPath>Things/SupplyShip/DummyTexture</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1,1)</drawSize>
    </graphicData>
    <altitudeLayer>BuildingTall</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <castEdgeShadows>false</castEdgeShadows>
    <staticSunShadowHeight>0</staticSunShadowHeight>
    <fillPercent>0.5</fillPercent>
    <selectable>true</selectable>
    <!-- TODO: not selectable -->
    <useHitPoints>false</useHitPoints>
    <statBases>
      <WorkToMake>3200</WorkToMake>
    </statBases>
    <tickerType>Normal</tickerType>
    <size>(2,2)</size>
    <hasInteractionCell>true</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <costList>
      <Steel>180</Steel>
      <Uranium>5</Uranium>
    </costList>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
  </ThingDef>

</Buildings>